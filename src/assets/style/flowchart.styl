@import './color.styl'
.flowchart
  position relative
  width 1000px
  height 500px
  &-ops
    position absolute
    width 100%
    height 100%
    list-style none
    &__item
      width 140px
      color #fff
      box-sizing border-box
      display block
      border-radius 8px
      height 50px
      line-height 50px
      border 2px solid success
      text-align center
      position absolute
      &-text
        height 50%
        line-height 1
        padding 5px
        &:first-child
          background success
        &:last-child
          color #b7bacd
  &-links
    width 100%
    height 100%
    position absolute
    overflow visible
    svg
      overflow visible
  &-link
    fill none
    stroke #20a0ff
    transition stroke .5s
    stroke-width 3